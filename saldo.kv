#:kivy 1.0.9
<Item1>:
    orientation: 'horizontal'
    padding: (2, 2)
    txt1 :""
    txt2 :''
    Label:
        text: root.txt2
        size_hint_x: 0.7
        halign: 'right'
        valign: 'middle'
        text_size: self.size
        padding: (10, 0)
        font_size: '15sp'
    Label:
        text: root.txt1
        size_hint_x: 0.3
        font_size: '15sp'
        canvas.before:
            Color:
                rgba: 0.059, 0.220, 0.346, 1
            Rectangle:
                pos: self.pos
                size: self.size

<Label2@Label>:
    text: 'reloading...'
    color: 1, 0.25, 0.25, 1
    font_size: '10dp'
    size_hint: (None, None)
    size: (self.texture_size[0]+8, self.texture_size[1]+6)
    pos_hint: {'x':0.01, 'y':0.01}
    canvas.before:
        Color:
            rgba: 0.3, 0, 0.1, 1 #0.059, 0.220, 0.346, 1
        Rectangle:
            pos: self.pos
            size: self.size
<EmptyLabel@Label>:
    size_hint_y: 0.4
<MainV>:
    rellay_container: container
    orientation: 'vertical'
    Button:
        text: 'reload'
        on_release: root.run_bs4()
        size_hint_y: 0.1
    RelativeLayout:
        size_hint_y: 0.5
        id: container
        BoxLayout:
            padding: (2, 2)
            orientation: 'vertical'
            Item1:
                txt1: root.field1_val
                txt2: root.field1_lbl #'nadčas do včera'
            Item1:
                txt1: root.field2_val #'bbb'
                txt2: root.field2_lbl #'dnes je'
            Item1:
                txt1: root.field3_val #'ccc'
                txt2: root.field3_lbl #'obed dnes'
            Item1:
                txt1: root.field4_val #'ddd'
                txt2: root.field4_lbl #'posledný príchod'
            Item1:
                txt1: root.field5_val #'eee'
                txt2: root.field5_lbl #'pracovný čas do posledného príchodu'
